extends layouts/index.pug

block productos
    div(class="card bg-dark bg-gradient text-white")
        div(class="card-header bg-dark text-center d-flex justify-content-between align-items-center")
            div.flex-grow-1.fw-bold Lista Productos
            a(href="/" type="button" class="btn btn-primary")='Nuevo producto'
        div(class="card-body")
            if productos.length > 0
                table(class="table table-bordered text-white")
                    tr(class="text-center")
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each producto in productos
                            tr(class="text-center")
                                td=producto.title
                                td=producto.price
                                td(class="w-25 h-25")
                                    img(class="img-thumbnail" src=producto.thumbnail)
            else
                p 'No se encontraron productos'

