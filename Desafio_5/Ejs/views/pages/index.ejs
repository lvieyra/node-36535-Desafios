<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="card bg-dark bg-gradient text-white">
        <div class="card-header bg-dark text-center d-flex justify-content-between align-items-center">
          <strong>Lista de productos</strong>
          <a href="/" type="button" class="btn btn-primary">Nuevo producto</a>
        </div>
        <div class="card-body">
            <% if(productos.length){ %>
                    <table class="table table-bordered text-white">
                        <tr class="text-center">
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                        </tr>
                        <%productos.forEach(function(producto) {%>
                            <tr class="text-center">
                                <td>
                                    <%=producto.title%>
                                </td>
                                <td>
                                    <%=producto.price%>
                                </td>
                                <td class="w-25 h-25"><img class="img-thumbnail" src=<%=producto.thumbnail%>></td>
                            </tr>
                            <%});%>
                    </table>
                
                  <% } else{ %>
                    <h3>No se encontraron productos</h3>
                     <% } %>
    
                
        </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>